  <div class="container">
    <h1 class="is-size-3 is-uppercase has-text-centered has-text-weight-bold has-text-link mt-4 mb-5">
      <%=lift.liftName%></h1>

    <div class="columns is-centered is-vcentered">
      <div class="column box is-two-fifths is-centered has-background-white-ter ml-5 mb-5 mr-5 ">
      <!-- <img src="/img/barbell.png" alt="austin skyline logo" style="max-height: 150px" class="mt-4"> -->
    
      <article class="message is-link is-half m-4 is-focused
      <% if (lift.completed === null) { %> is-info" <%} else if (lift.completed === true){ %> is-success" <% } else { %>  is-danger"<% }%>>
        <div class="message-header">
          <%=lift.liftName%> Warm Ups
        </div>
        <div class="message-body">
          <p class="has-text-centered is-size-5">
            2 x 5 @
            45</p>
          <p class="has-text-centered is-size-5">
            1 x 5 @
            <%=Math.ceil(((lift.weight)-((lift.weight)*.5))/5)*5%> </p>
          <p class="has-text-centered is-size-5">
            1 x 3 @
            <%=Math.ceil(((lift.weight)-((lift.weight)*.25))/5)*5%></p>
          <p class="has-text-centered is-size-5">
            1 x 1 @
            <%=Math.ceil(((lift.weight)-((lift.weight)*.075))/5)*5%> </p>
        </div>
      </article>


      <article class="message is-info is-half m-4 is-focused is-centered 
      
      <% if (lift.completed === null) { %> is-info" <%} else if (lift.completed === true){ %> is-success" <% } else { %>  is-danger"<% }%>>

        <div class="message-header">
          <%=lift.liftName%> Working Set
        </div>
        <div class="message-body">
          <p class="has-text-centered is-size-5">
            <%=lift.sets%> x <%=lift.reps%> @
            <%=lift.weight%> </p>
        </div>
      </article>

      <div class="column">

       <!-- Completed Set this will toggle true or false in "completed lift"  -->

  <form action="/oneexercise/<%=workoutID%>/<%=lift._id%>/true/?_method=PUT" method="POST">
    <input class="button is-success is-medium is-fullwidth is-focused mb-3" type="submit" id="completed" value="Completed Working Set" />
  </form>

  <form action="/oneexercise/<%=workoutID%>/<%=lift._id%>/false/?_method=PUT" method="POST">
  <input class="button is-danger is-medium is-focused is-fullwidth" id="completed" type="submit" name="Failed Working Set" value="Failed Working Set" />
  </form>


  
