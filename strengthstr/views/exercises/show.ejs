<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../partials/head.ejs') %>
  <title>StrengthStr</title>
</head>

<body>
  <!-- NAVBAR -->
  <%- include ('../partials/navbar.ejs') %>

  <div class="container">

    <h1 class="is-size-3 is-uppercase has-text-centered has-text-weight-bold has-text-link mt-4 mb-5">
      <%= currentUser.username %>'s Workout</h1>
      <!-- This shows the workout in console. -->

      <div class="container">
        <div class="columns is-centered is-vcentered">

          

          <div class="column is-two-fifths is-centered m-5 ">
            <% for (let key in Workout.exercises){ %>
              <a href="/oneexercise/<%=Workout._id%>/<%= Workout.exercises[key]._id %>/edit"> 
              <article class="message is-info is-half m-4 is-focused">
                <div class="message-header">
                  <%=Workout.exercises[key].liftName%>
                 
                 

                 

                  <form action="/oneexercise/<%=Workout._id%>/<%= Workout.exercises[key]._id %>?_method=DELETE" method="POST">
                    <button class="delete is-small" type="submit" value="DELETE"></button>
                  </form>
                  
                </div>
                <div class="message-body">
              <p class = "has-text-centered is-size-5"><%=Workout.exercises[key].liftName%>: <%=Workout.exercises[key].sets%> x <%=Workout.exercises[key].reps%> @ <%=Workout.exercises[key].weight%> </p>
                  </div>
              </article>
            </a>
              <% }  %>    
          </div>

          <div class="column is-two-fifths m-3">
            <!-- add form here?  -->
            <h1 class="is-size-1 is-uppercase has-text-centered has-text-weight-bold	has-text-link"> Add Lift</h1>


      <form action="/oneexercise" method="POST">
       <!-- liftName  -->
    <!-- <div class="field">
      <label class="label">Lift Name</label>
      <div class="control">
        <input class="input is-large" type="text" name="liftName" required/> <br />
      </div>
    </div> -->

    <div class="control has-icons-left">
    <div class="field">
       <label class="label">Lift Name</label>
    <div class="select is-large is-fullwidth mb-3 ">
     
      <select name="liftName" class="is-focused">
        <option>Squat</option>
        <option>Bench</option>
        <option>Press</option>
        <option>Deadlift</option>
        <option>Power Cleans</option>
      </select>
      <!-- <input type="submit" name="liftName" required/> -->
      <div class="icon is-small is-left">
        <i class="fas fa-dumbbell"></i>
    </div>
    </div>
  </div>
  </div>

    <!-- <div class="select">
      <select>
        <option>Select dropdown</option>
        <option>With options</option>
      </select>
    </div> -->
      
      <!-- weight -->
      
    <div class="field">
      <label class="label">Weight</label>
      <p class="control has-icons-left">
        <input class="input is-large" type="number" name="weight" >
        <span class="icon is-small is-left">
          <i class="fas fa-weight-hanging"></i>
        </span>
        </p>
    </div>

      <!-- sets -->
    <div class="field">
        <label class="label">Sets</label>
        <p class="control has-icons-left">
        <input class="input is-large" type="number" name="sets" >
        <span class="icon is-small is-left">
          <i class="fas fa-undo"></i>
        </span>
        </p>
    </div>
    
    <!-- reps -->
    <div class="field">
      <label class="label">Reps</label>
      <p class="control has-icons-left">
        <input class="input is-large" type="number" name="reps" >
        <span class="icon is-small is-left">
          <i class="fas fa-layer-group"></i>
        </span>
        </p>
    </div>

    <!-- Completed -->
    <!-- <div class = "showCompletion">
      <label for="completed">
        <input type="checkbox" id="completed" name="completed" />
        <span>Completed Lift</span>
      </label>
    </div> -->

    <div class="showWorkoutID">
      <label for="WorkoutID">
        <input type="text" id="workoutID" name="workoutID" value="<%=Workout._id%>" />
        <span>workout id</span>
      </label>
    </div>

    <!-- Submit  -->
    <input class="button is-rounded is-info is-large is-fullwidth mt-6 mb-6" type="submit" name="Submit Lift" />
      </form>
          </div>


          
        </div>
</div>

        <!-- end of container div -->
      </div>

  

    



      <!-- Push the made workouts the array -->


    <div class="container mb-6">

      




      <!-- Middle Container -->
    </div>
    <!-- End of main container div -->
  </div>
  <!-- FOOTER -->
  <%- include ('../partials/footer.ejs') %>
  <!-- FOOTER -->
</body>

</html>